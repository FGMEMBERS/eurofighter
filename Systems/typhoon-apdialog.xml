 <frame>
 <layout>hbox</layout>
  
  <group>
  <layout>hbox</layout>
  <padding>10</padding>
  
  <button>
   <x></x>
   <y>-10</y>
   <width>70</width>
   <legend>Apply</legend>
   <binding>
    <command>dialog-apply</command>
   </binding>
  </button>
  
  <button>
   <x>0</x>
   <y>-10</y>
   <width>70</width>
   <legend>Close</legend>
   <binding>
    <command>dialog-close</command>
   </binding>
  </button>
  
  </group>

 </frame>

</PropertyList>