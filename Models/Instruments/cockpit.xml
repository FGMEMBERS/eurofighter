				<!--less-than>
				   <property>/controls/canopy/position-norm</property>
				   <value>1</value>
				</less-than-->
			<equals>
				<property>controls/canopy/position-norm</property>
				<value>0</value>
			</equals>
		 </condition>
	</animation>

	<animation>
	  <type>pick</type>
	  <object-name>Ladder.on</object-name>
	  <object-name>Ladder_1</object-name>
	  <action>
	   <button>0</button>
		<binding>
			<command>nasal</command>
			 <script>typhoon.canopy.toggle();</script>
		</binding>
