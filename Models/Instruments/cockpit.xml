	<!-- lighting;	ORDER (FIFO) very important -->
		
	<animation>
		<object-name>leftpButns.off</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/ULP/brightness</factor-prop>
			<red>0.25</red>
			<green>0.25</green>
			<blue>0.25</blue>
			<!--red>0.3</red>
			<green>0.3</green>
			<blue>0.3</blue-->
		</emission>
	</animation>

	<animation>
		<object-name>leftpButns.on</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/ULP/brightness</factor-prop>
			<red>0.1</red>
			<green>0.9</green>
			<blue>0.1</blue>
			<!--red>0.0</red>
			<green>0.9</green>
			<blue>0.0</blue-->
		</emission>
	</animation>

 <animation> <!-- link electrical system: disable all picks -->
