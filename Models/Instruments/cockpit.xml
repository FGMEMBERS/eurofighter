<!-- "GearStick" 
Nombres de los objetos:
Gear.stick (palanca y botones que se mueven)
	GearStick.off.1  con bloqueo
	GearStick.off.2
	GearStick.on.1   sin bloqueo
	GearStick.on.2
-->

	<animation>
		<type>rotate</type>
		<object-name>Gear.stick</object-name>
		<property>controls/gear/gear-down</property>
		    <interpolation>
		      <entry><ind> 1 </ind><dep> 30 </dep></entry>
		      <entry><ind> 0 </ind><dep> 0 </dep></entry>
		    </interpolation>
		<center>
			<x-m>3.631805</x-m>
			<y-m>-0.34639</y-m>
			<z-m>0.714156</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
	  <type>pick</type>
	  <object-name>Gear.stick.1</object-name>
	  <action>
	   <button>0</button>
	    <binding>
	     <!--command>property-toggle</command>
		<property>controls/gear/gear-down</property-->
		<command>nasal</command>
		 <script>typhoon.gearDownClick();</script>
	   </binding>
	  </action>
	</animation>
 


	<!-- tailwheel-lock status -->
	<animation>
		<type>select</type>
		<object-name>Gear.stick.off.1</object-name>
		<object-name>Gear.stick.off.2</object-name>
		 <condition>
			<property>controls/gear/tailwheel-lock</property>
			<value>0</value>
		 </condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Gear.stick.on.1</object-name>
		<object-name>Gear.stick.on.2</object-name>
		 <condition>
			<not>
			<property>controls/gear/tailwheel-lock</property>
			<value>0</value>
			</not>
		 </condition>
	</animation>

<!--
Estados del tren:
Gear.status.off.N (N=nose) Gear.status.off.R Gear.status.off.L
Gear.status.on.N Gear.status.on.R Gear.status.on.L
Botón bloqueo:
Gear.lock.in (es el botón sin presionar, más largo)
Gear.lock.out (casi debería llamarse base, en vez de out)
 -->


	<animation>
		<type>select</type>
		<object-name>Gear.status.off.N</object-name>
		 <condition>
			<less-than>
			<property>gear/gear/position-norm</property>
			<value>1</value>
			</less-than>
		 </condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Gear.status.off.R</object-name>
		 <condition>
			<less-than>
			<property>gear/gear[2]/position-norm</property>
			<value>1</value>
			</less-than>
		 </condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Gear.status.off.L</object-name>
		 <condition>
			<less-than>
			<property>gear/gear[1]/position-norm</property>
			<value>1</value>
			</less-than>
		 </condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Gear.status.on.N</object-name>
		 <condition>
			<property>gear/gear[0]/position-norm</property>
			<value>1</value>
		 </condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Gear.status.on.R</object-name>
		 <condition>
			<property>gear/gear[2]/position-norm</property>
			<value>1</value>
		 </condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Gear.status.on.L</object-name>
		 <condition>
			<property>gear/gear[1]/position-norm</property>
			<value>1</value>
		 </condition>
	</animation>

	<!-- tailwheel-lock switch -->
	<animation>
		<type>select</type>
		<object-name>Gear.lock.out</object-name>
		 <condition>
			<not>
			<property>controls/gear/tailwheel-lock</property>
			<value>0</value>
			</not>
		 </condition>
	</animation>

	<animation>
	  <type>pick</type>
	  <object-name>Gear.lock.out</object-name>
	  <object-name>Gear.lock.in</object-name>
	  <action>
	   <button>0</button>
	    <binding>
	     <command>property-toggle</command>
		<property>controls/gear/tailwheel-lock</property>
	   </binding>
	  </action>
	</animation>
 
