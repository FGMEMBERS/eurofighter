<!-- Ladder and canopy switch -->

	<animation>
		<type>select</type>
		<object-name>Ladder.on</object-name>
		 <condition>
				<greater-than>
				   <property>/controls/canopy/position-norm</property>
				   <value>0.01</value>
				</greater-than>
			<!--greater-than>
				<property>controls/canopy/position-norm</property>
				<value>0</value>
			</greater-than-->
		 </condition>
	</animation>

	<!-- show transit -->
	<animation>
	  <type>material</type>
	  <object-name>Ladder.on</object-name>
	  <emission>
	    <red>1.0</red>
	    <green>0.3</green>
	    <blue>0.3</blue>
	    <factor-prop>/controls/canopy/position-norm</factor-prop>
	  </emission>
	</animation>


	<animation>
		<type>select</type>
		<object-name>Ladder_1</object-name>
